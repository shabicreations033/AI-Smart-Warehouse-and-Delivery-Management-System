<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main>
  <form action="/inventory/add" method="POST">
    <h2>Add / Restock an Item</h2>
    
    <% if (error) { %><div class="feedback-box error-box"><%= error %></div><% } %>
    
    <div class="feedback-box info-box" style="text-align: left;">
        To restock, select an existing stock name and enter its SKU. To create a completely new item, just use a new SKU.
    </div>

    <label for="stockId">Select Existing Stock Name</label>
    <select id="stockId" name="stockId">
        <option value="">-- Choose an existing stock --</option>
        <% stocks.forEach(stock => { %>
            <option value="<%= stock._id %>"><%= stock.name %></option>
        <% }) %>
    </select>

    <p style="text-align: center; margin: 15px 0; font-weight: bold; color: var(--color-text-secondary);">OR</p>
    
    <label for="newStockName">Create New Stock Name</label>
    <input type="text" id="newStockName" name="newStockName" placeholder="e.g., Gaming Headsets" />
    
    <hr style="margin: 30px 0; border: none; border-top: 1px solid var(--color-border);">
    
    <label for="sku">SKU (Unique per Stock Name)</label>
    <input type="text" id="sku" name="sku" placeholder="e.g., RAZER-KRAKEN-V3" required />
    
    <label for="price">Price (per unit)</label>
    <input type="number" id="price" name="price" value="0.00" min="0" step="0.01" required />
    
    <label for="quantity">Quantity to Add</label>
    <input type="number" id="quantity" name="quantity" value="1" min="0" required />
    
    <label for="location">Warehouse Location</label>
    <input type="text" id="location" name="location" placeholder="e.g., Aisle 7, Shelf B" />
    
    <button type="submit" class="btn btn-primary">Submit Item</button>
  </form>
</main>

<%- include('partials/footer') %>