<%- include('partials/header') %>
<%- include('partials/navbar') %>
<style>.stock-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px; margin-top: 20px; } .stock-card { background-color: var(--color-surface); padding: 20px; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); border: 1px solid var(--color-border); } .stock-card h3 { margin-bottom: 10px; font-size: 18px; } .stock-card p { margin-bottom: 5px; } .stock-card .sku { font-family: monospace; background-color: var(--form-background); padding: 2px 6px; border-radius: 4px; font-size: 14px; } .out-of-stock .stock-status { color: var(--color-danger); font-weight: bold; } .in-stock .stock-status { color: #38a169; font-weight: bold; }</style>
<main>
  <h2>Stock Catalogue</h2>
  <p style="text-align:center;">A real-time overview of all items in the warehouse inventory.</p>
  <div class="stock-grid">
    <% if (items.length > 0) { %>
      <% items.forEach(item => { %>
      
        <div class="stock-card <%= item.availableStock > 0 ? 'in-stock' : 'out-of-stock' %>">
          <h3><%= item.name %></h3>
          <p><strong>SKU:</strong> <span class="sku"><%= item.sku %></span></p>
          <p><strong>Location:</strong> <%= item.location || 'N/A' %></p>
          <hr style="margin: 15px 0; border-color: var(--border-color);">
     
          <p class="stock-status"><%= item.availableStock > 0 ? `${item.availableStock} units in stock` : 'Out of Stock' %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>There are currently no items in the inventory to display.</p>
    <% } %>
  </div>
</main>
<%- include('partials/footer') %>